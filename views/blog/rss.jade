doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title The Island Blog
    link https://www.island.io/blog
    description The Island's blog
    atom:link(href='https://www.island.io/blog/rss', rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'https://www.island.io/blog/' + post.slug
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
