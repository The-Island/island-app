ul.pagination
  - var i = 1;
  - while (i <= getPageCount())
    - var back = i % 2 === 0 ? '#f2f2f2': '#f9f9f9';
    if page == i
      li
        a.active(href="#{pageURL(i)}", style="background: #{back};") #{i}
    else
      li
        a(href="#{pageURL(i)}", style="background: #{back};") #{i}
    - i++;
