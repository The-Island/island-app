    #grid
      - for (var d in media)
        div(id='obj-' + media[d].id, class='each-obj ' + media[d].type, style='width: 231px')
          span.grid-obj-title
            =media[d].title
          a(href='http://weareisland.ld/' + media[d].parent.slug + '/' + media[d].slug)
            div.obj-hover(style='width: 231px')
              h1.obj-hover-txt
                =media[d].parent.name.first + ' / ' + media[d].meta.likes
            img(id='img-' + media[d].id, class='page-' + page, src=media[d].location, alt=media[d].type, width='231')
          div.right
            span.grid-tag tags: 
            span.grid-obj-tags
              =media[d].meta.tags
