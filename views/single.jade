input(type='hidden', name='hearts', value=hearts)
div.single-left
  div.obj-title
    span.slash /
    h1.title-left
      =media.title
    h1.title-sub from 
      =media.member.displayName
  - if (media.type == 'image')
    div.obj-holder(style='height: ' + media.attached.image_full.meta.height + 'px')
      img.matte(id='image-' + media._id, src=media.attached.image_full.cf_url, width=media.attached.image_full.meta.width, height=media.attached.image_full.meta.height)
      div.hearts
        div.hearts-wrap
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
        div.hearts-back(id='like-' + media._id)
          img(src='/graphics/hearts.png')
  - if (media.type == 'video')
    div.obj-holder
      video.matte(id='video-' + media._id, poster=media.attached.video_poster.cf_url, controls='controls', preload='none', width='640', height=(media.attached.video_encode.meta.height / media.attached.video_encode.meta.width) * 640)
        source(type='video/mp4', src=media.attached.video_encode.cf_url)
        object(type='application/x-shockwave-flash', data='/mediaelement/flashmediaelement.swf', width='640', height=(media.attached.video_encode.meta.height / media.attached.video_encode.meta.width) * 640)
            param(name='movie', value='/mediaelement/flashmediaelement.swf')
            param(name='flashvars', value='controls=true&poster=' + media.attached.video_poster.cf_url + '&file=' + media.attached.video_encode.cf_url)
            img(src=media.attached.video_placeholder.cf_url, title='No video playback capabilities', width=media.attached.video_placeholder.meta.width, height=media.attached.video_placeholder.meta.height)
      div.hearts
        div.hearts-wrap
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
          img.heart-img(src='/graphics/heart.png')
        div.hearts-back(id='like-' + media._id)
          img(src='/graphics/hearts.png')
  div.obj-desc.matte
    img.left(src='/graphics/is-obj-info.gif', alt='info', align='top')
    div.obj-desc-txt-wrap
      p.obj-desc-txt
        =media.body
      h3.obj-details(data-date=media.created, data-type='media')
