header.header
  .block-messages
    ul
  .header-inner
    a.button.disabled.logo.navigate(href="/")
      span.tagline The Island Beta
      //- span.tagline Train &middot; Climb
      img(src="#{root}/img/logo.png", width="127", height="30")
    div.divider-vertical.pad-right
    - if (typeof member !== 'undefined')
      .header-search
        input.header-search-input(type="search", tabindex="1", placeholder="Search...")
        .search-display
          .list-header
    ul.header-links
      li
        a(class="navigate", href="/", alt="Log your climbing. Follow other athletes. Watch crags and climbs.") Home
        - if (typeof member !== 'undefined')
          div.header-menu
            ul
              li
                a(class="navigate", href="/", alt="Log your climbing. Follow other athletes. Watch crags and climbs.") Activity
              //- li
              //-   a(class="navigate", href="/media", alt="Recently uploaded photos and videos.") Media
              li
                a(class="navigate", href="/#{member.username}/ascents", alt="My rock climbing ascents.") My Ascents
      - if (typeof member !== 'undefined')
        li
          a(class="navigate", href="/crags", alt="Search for a crag.") Crags
      li
        a(class="navigate", href="/films", alt="We\'re proud to bring you professional grade content. Many thanks to everyone that has made these films happen.") Films
      li
        a(class="navigate #{typeof blog !== 'undefined' && blog == true ? 'active':''}", href="/blog", alt="News and feature updates.") Blog
      - if (typeof member !== 'undefined')
        li
          a.header-tips(href="javascript:;", style="font-weight:bold;", alt="Tips on using The Island.") Tips
    - if (typeof member !== 'undefined')
      div.member-box
        div.divider-vertical
        a.header-avatar(href="/" + member.username)
          - g = 'https://www.gravatar.com/avatar/' + member.gravatar + '?s=50&d=https%3A%2F%2Fs3.amazonaws.com%2Fisland.io%2Favatar_48.png'
          img(src="#{member.avatar || g}", width="50", height="50")
        div.divider-vertical
        a.button.globe-button.header-action(href="javascript:;", title="Notifications")
          i.icon-globe
          span.count
        div.divider-vertical
        a.button.header-action.navigate(href="/settings", title="Settings")
          i.icon-sliders
        div.divider-vertical
        a.button.header-action(href="/logout", title="Sign out")
          i.icon-logout
    - else
      a.button.signin-button.header-action.navigate(href="/signin", alt="Sign In. Forgot your password? Sign Up.")
        span Sign in 
        i.icon-login
