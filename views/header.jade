header.header
  .block-messages
    ul
  .header-inner
    a.button.disabled.logo.navigate(href="/")
      //- span.tagline Train &middot; Climb
      span.tagline The Island Beta
      img(src="#{root}/img/logo.png", width="127", height="30")
    div.divider-vertical.pad-right
    - if (typeof member !== 'undefined')
      .header-search
        input.header-search-input(type="search", tabindex="1", placeholder="Search...")
        .search-display
          .list-header
    ul.header-links
      li
        a(class="navigate", href="/") Home
      - if (typeof member !== 'undefined')
        li
          a(class="navigate", href="/crags") Crags
      li
        a(class="navigate", href="/films") Films
      li
        a(class="navigate #{typeof blog !== 'undefined' && blog == true ? 'active':''}", href="/blog") Blog
    - if (typeof member !== 'undefined')
      div.member-box
        div.divider-vertical
        a.header-avatar(href="/" + member.username)
          img(src="https://www.gravatar.com/avatar/" + member.gravatar + "?s=50&d=https%3A%2F%2Fs3.amazonaws.com%2Fisland.io%2Favatar_48.png", width="50", height="50")
        - if (member.role !== 2)
          a.button.header-action.header-add-button.header-add-crag-button(href="javascript:;", title="Add new crag")
            i.icon-plus
            i.icon-location
          div.divider-vertical
        a.button.globe-button.header-action(href="javascript:;", title="Notifications")
          i.icon-globe
          span.count
        div.divider-vertical
        a.button.header-action(href="/logout", title="Sign out")
          i.icon-logout
    - else
      a.button.signin-button.header-action.navigate(href="/signin")
        span Sign in 
        i.icon-login
