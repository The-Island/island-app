extends index

block main
  #banner
    a(href="/7JNoN3ih")
      img(src="https://d271mvlc6gc7bl.cloudfront.net/main/img/banner_2.jpg", width="984", height="100")
  #feedback
    div.trending-media-wrap.left
      span.slash
        | /
      h1.title-left Trending
      h1.title-sub Most popular right now
      div.trending-media.matte
        #trend.trending-media-images
          each trend in trends
            include trend
    div.recent-comments-wrap
      h1.title-right / Recent Comments
      #recent-comments(data-id='all', data-limit="5", data-showmember="true", data-showpost="true")
        span.loading Loading ...
  div.grid-wrap
    #search
      h1.title-bottom / Browse
      input#search-box.matte(type="search", placeholder="Search", value="")
      div.search-spinner
    #grid.adjustable-grid
