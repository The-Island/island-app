div.single-left
  div.obj-title
    span.slash /
    h1.title-left
      =member.displayName
    h1.title-sub contributor since 
      =member.created
  div.obj-holder.member-picture
    img.matte(src=data.picture, width='640')
  div.obj-desc.matte
    img.left(src='/graphics/is-obj-info.gif', alt='info', align='top')
    div.obj-desc-txt-wrap
      p.obj-desc-txt
        div.member-info
          ul
            li
              span Lives in 
              span.member-info-content #{data.location}
            li
              span From 
              span.member-info-content #{data.hometown}
            li
              span.member-info-content #{data.birthday} 29 
              span year old 
              span.member-info-content #{data.gender}
            li
              span More from #{data.displayName} at 
              span.member-info-content #{data.website}
            li
              span Supported by 
              span.member-info-content #{data.sponsors} FiveTen, North Face
      h3.obj-details.obj-details Contributor since  
        =data.created
