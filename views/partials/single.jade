div.left
  #obj-title
    span.slash /
    h1.obj-title
      =d.title
    h1.obj-owner from 
      =m.name.first + ' ' + m.name.last
  #obj-holder
    img.matte(id='image-'+d.id, src=d.attached.image_full.cf_url, width=d.attached.image_full.meta.width, height=d.attached.image_full.meta.height)
  #obj-desc.matte
    img.left(src='/graphics/is-obj-info.gif', alt='info', align='top')
    div(style='margin: 0 0 0 25px; padding: 10px 10px 5px 4px')
      p#obj-desc-txt
        =d.body
      h3#obj-details.obj-details Added 
        =d.added + ' by ' + m.name.first + ' ' + m.name.last
      div(style='position: relative; height: 17px')
        img.social-icons(src='/graphics/sn/b/facebook_16.png', alt='/graphics/sn/facebook_16.png', title='Post, to Profile', style='left:0px;')
        img.social-icons(src='/graphics/sn/b/twitter_16.png', alt='/graphics/sn/twitter_16.png', title='Tweet', style='left:21px;')
        img.social-icons(src='/graphics/sn/b/myspace_16.png', alt='/graphics/sn/myspace_16.png', title='Post to Profile', style='left:42px;')
        img.social-icons(src='/graphics/sn/b/digg_16.png', alt='/graphics/sn/digg_16.png', title='Digg It', style='left:63px;')
        img.social-icons(src='/graphics/sn/b/delicious_16.png', alt='/graphics/sn/delicious_16.png', title='Share', style='left:84px;')
        img.social-icons(src='/graphics/sn/b/stumbleupon_16.png', alt='/graphics/sn/stumbleupon_16.png', title='Share', style='left:105px;')
        img.social-icons(src='/graphics/sn/b/tumblr_16.png', alt='/graphics/sn/tumblr_16.png', title='Share', style='left:126px;')
        img.social-icons(src='/graphics/sn/b/email_16.png', alt='/graphics/sn/email_16.png', title='Email', style='left:147px;')
        img.social-icons(src='/graphics/sn/b/rss_16.png', alt='/graphics/sn/rss_16.png', title='Follow', style='left:168px;')
div(style='margin-left: 670px')
  div(style='padding-top: 20px')
    img(src='/graphics/is-bubble.png', alt='is-bubble', align='top')
  //- if (typeof cm !== 'undefined')
  textarea.commentor-input-dummy.matte(name='Write a comment...') Write a comment...
  div.commentor  
    textarea.commentor-input.matte
    input.is-button.add-comment(id='addto-'+d.id, type='submit', title='Add Comment', value='Comment')
    span.commentor-whois Logged in as 
      span(style='font-style: italic')
        =cm.name.first + ' ' + cm.name.last
  //- else
  //div.commentor-login Please
  //button.login log in
  //| to write a comment.
  #obj-comments
    !=partial('comment', d.comments )
div.clear