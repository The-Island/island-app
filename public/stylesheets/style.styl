/* ISLAND.com */

/*––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––– fonts */

@font-face
  font-family Title
  font-style normal
  src url(../fonts/Impact.ttf)

/*––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––– resets */

html
  color #000
  background #fff

body, div, dl, dt, dd, ul, ol, li, h1,h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, textarea, p, blockquote, th, td
  margin 0
  padding 0

table
  border-collapse collapse
  border-spacing 0

fieldset, img
  outline none
  border 0

img:focus
  outline none
  
img::-moz-focus-inner
  border none

address, caption, cite, code, dfn, em, strong, th, var
  font-style normal
  font-weight normal

li
  list-style none

caption, th
  text-align left

h1, h2, h3, h4, h5, h6
  font-size 100%
  font-weight normal

q:before, q:after
  content ''

abbr, acronym
  border 0
  font-variant normal

sup
  vertical-align text-top

sub
  vertical-align text-bottom

input, textarea, select
  font-family inherit
  font-size inherit
  font-weight inherit

legend
  color #000

header, footer, section, aside, nav, article
  display block

