- if (trend.type == 'image')
  a.trending(href=trend.id)
    img.trending-img(id='trend-' + trend.id, src=trend.attached.image_full.cf_url, width=trend.attached.image_full.meta.width, height=trend.attached.image_full.meta.height)
- if (trend.type == 'video')
  a.trending(href=trend.id)
    img.trending-img(id='trend-' + trend.id, src=trend.attached.video_placeholder.cf_url, width=trend.attached.video_placeholder.meta.width, height=trend.attached.video_placeholder.meta.height)